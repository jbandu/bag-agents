# LLM API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
# Neon PostgreSQL (for structured data)
NEON_DB_HOST=your_neon_host.neon.tech
NEON_DB_PORT=5432
NEON_DB_NAME=baggage_operations
NEON_DB_USER=your_neon_user
NEON_DB_PASSWORD=your_neon_password
NEON_DB_SSLMODE=require

# Neo4j (for graph data - routes, relationships)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=True

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Model Configuration
DEFAULT_LLM_MODEL=claude-3-5-sonnet-20241022
DEFAULT_TEMPERATURE=0.7
MAX_TOKENS=4096

# Agent Configuration
ENABLE_PREDICTION_AGENT=True
ENABLE_ROOT_CAUSE_AGENT=True
ENABLE_DEMAND_FORECAST_AGENT=True
ENABLE_CUSTOMER_SERVICE_AGENT=True
ENABLE_COMPENSATION_AGENT=True
ENABLE_INFRASTRUCTURE_HEALTH_AGENT=True
ENABLE_ROUTE_OPTIMIZATION_AGENT=True

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_METRICS=True

# Feature Flags
ENABLE_CACHING=True
CACHE_TTL_SECONDS=3600
ENABLE_ASYNC_PROCESSING=True

# Security
API_KEY_HEADER=X-API-Key
API_KEYS=your_api_key_1,your_api_key_2

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
